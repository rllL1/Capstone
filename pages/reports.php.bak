        // Filter application
        function applyFilters() {
            const month = document.getElementById('monthFilter').value;
            const year = document.getElementById('yearFilter').value;
            const dept = document.getElementById('deptFilter').value;
            window.location.href = `reports.php?month=${month}&year=${year}&department=${encodeURIComponent(dept)}`;
        }

        // Export functionality
        function exportReport(type) {
            const format = type.toUpperCase();
            showConfirm(`Export Report to ${format}?`, `Are you sure you want to export this report to ${format} format?`)
                .then((result) => {
                    if (result.isConfirmed) {
                        showLoading('Preparing export...');
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = type === 'excel' ? 'export_excel.php' : 'export_reports_pdf.php';
                        
                        // Add current filters as hidden inputs
                        const month = document.querySelector('select[name="month"]').value;
                        const year = document.querySelector('select[name="year"]').value;
                        const department = document.querySelector('select[name="department"]').value;
                        
                        const inputs = {
                            'type': 'reports',
                            'month': month,
                            'year': year,
                            'department': department
                        };
                        
                        Object.keys(inputs).forEach(key => {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = key;
                            input.value = inputs[key];
                            form.appendChild(input);
                        });
                        
                        document.body.appendChild(form);
                        form.submit();
                        
                        setTimeout(() => {
                            Swal.close();
                            showSuccess(`Report exported to ${format} successfully!`);
                        }, 1500);
                    }
                });
        }

        // Table sorting functionality
        function sortTable(table, column, asc = true) {
            const dirModifier = asc ? 1 : -1;
            const tBody = table.tBodies[0];
            const rows = Array.from(tBody.querySelectorAll('tr'));

            // Sort rows
            const sortedRows = rows.sort((a, b) => {
                let aColText = a.querySelector(`td:nth-child(${column + 1})`).textContent.trim();
                let bColText = b.querySelector(`td:nth-child(${column + 1})`).textContent.trim();

                // Handle employee ID numbers (remove # and leading zeros)
                if (column === 0) {
                    aColText = parseInt(aColText.replace('#', ''));
                    bColText = parseInt(bColText.replace('#', ''));
                }

                // Handle currency values
                if (aColText.startsWith('₱') && bColText.startsWith('₱')) {
                    aColText = parseFloat(aColText.replace('₱', '').replace(/,/g, ''));
                    bColText = parseFloat(bColText.replace('₱', '').replace(/,/g, ''));
                    return (aColText - bColText) * dirModifier;
                }

                // Handle dates
                if (column === 5) {
                    aColText = new Date(aColText).getTime();
                    bColText = new Date(bColText).getTime();
                    return (aColText - bColText) * dirModifier;
                }

                // Default string comparison
                return aColText.localeCompare(bColText) * dirModifier;
            });

            // Remove existing rows
            while (tBody.firstChild) {
                tBody.removeChild(tBody.firstChild);
            }

            // Add sorted rows
            tBody.append(...sortedRows);

            // Update sort icons
            table.querySelectorAll('th').forEach(th => th.classList.remove('active-sort'));
            table.querySelector(`th:nth-child(${column + 1})`).classList.add('active-sort');
        }

        // Add click event listeners to sortable headers
        document.querySelectorAll('th[data-sort]').forEach(headerCell => {
            headerCell.addEventListener('click', () => {
                const table = headerCell.closest('table');
                const columnIndex = Array.from(headerCell.parentElement.children).indexOf(headerCell);
                const currentIsAsc = headerCell.classList.contains('active-sort');
                sortTable(table, columnIndex, !currentIsAsc);
            });
        });
    </script>
